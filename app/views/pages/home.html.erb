
<% if user_signed_in? %>
  <h1>Hello <%= current_user.name %>!</h1>

  <h1>My <%= "trail".pluralize(@trails_count) %> (<%= @trails_count %>)</h1>
  <%= link_to "+",  new_trail_path, class: "btn btn-primary" %>

  <% @trails.each do |trail| %>
    <p><%= trail.name %></p>
    <%= link_to "info", trail_path(trail) %>
  <% end %>
<% else %>
  <h1>Please login!</h1>
<% end %>
