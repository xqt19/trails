<% if user_signed_in? %>
  <div class="d-flex justify-content-center">
  <h1>Hello <%= current_user.name %>!</h1>
  </div>

  <h2>My <%= "trail".pluralize(@trails_count) %> (<%= @trails_count %>)</h2>
  <div class="d-flex flex-column justify-content-center align-items-center">
  <%= link_to "Create a new trail", new_trail_path, class: "btn btn-primary" %>
  </div>

<br>
<div class="d-flex justify-content-center">
--------------------------------------------------------
</div>
<br>
  <% @trails&.each do |trail| %>
  <div class="d-flex justify-content-center m-3">
    <div class="card" style="width: 18rem;">
      <h2><%= trail.name %></h2>
      <div class="card-body">
        <p>Started by <%= trail.user.name %></p>
        <%= link_to "show", trail_path(trail) %>
        <%= link_to "info", edit_trail_path(trail) %>
      </div>
    </div>
  </div>
  <% end %>

  <% if @collabs %>
    <h2>My <%= "collab".pluralize(@collabs_count) %> (<%= @collabs_count %>)</h2>

    <% @collabs.each do |collab| %>
      <h2><%= collab.trail.name %></h2>
      <p>Started by <%= collab.trail.user.name %></p>
      <%= link_to "See More", trail_path(collab.trail) %>
      <%#= link_to "info", edit_trail_path(collab.trail) %>
    <% end %>
  <% end %>

<% else %>
  <h1>Please login!</h1>
<% end %>
