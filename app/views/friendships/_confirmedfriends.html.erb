<div class="activity-horizontal-container d-flex flex-row align-items-center" style="flex-wrap: nowrap; overflow: auto;">
  <div class="card friendcard">
   <% confirmed_friendships.each do |friendship| %>
      <div class="d-flex justify-content-center p-3 m-3" style="width 70%; " >
        <div class = "d-flex flex-column text-center align-items-center justify-content-center">
          <u><%= friendship.sender.name if friendship.sender != user %><%= friendship.receiver.name if friendship.receiver != user %></u>
          <br><%= friendship.sender.email if friendship.sender != user %><%= friendship.receiver.email if friendship.receiver != user %>
          <div class="d-flex justify-content-between align-items-center my-3">
            <%= link_to "", root_path, class: "far fa-comments mx-3", style: "font-size: 30px;" %>
            <%= link_to "", user_friendship_path(current_user, friendship), method: :delete, class: "fas fa-trash mx-3", style: "font-size: 30px;", data: { confirm: "Are you sure?" }  %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
