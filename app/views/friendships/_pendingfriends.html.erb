<% if user.pending_friends.empty? == false %>
    <h3 class = "text-center">Pending Friends</h3>
    <% end %>
  <div class="row">
    <% pending_adds.each do |friendship| %>
      <div class="col-6">
            <div class="d-flex justify-content-center p-3 mb-2" style="width 70%; border: 1px solid black" >
      <div class = "d-flex flex-column text-center align-items-center justify-content-center">
        <u>You have added <strong><%= friendship.receiver.name %></strong> as a friend!</u>
        <br><%= friendship.receiver.email %>
        <div class="d-flex justify-content-between">
          <%= link_to "Friend Request Pending", user_friendship_path(user,friendship), method: :delete, class: "btn btn-secondary mx-3", data: { confirm: "Are you sure?" } %>
        </div>
        <h6>(click to cancel)</h6>
      </div>
    </div>

      </div>
    <% end %>
  </div>

