
<div class="d-flex align-items-center" style="flex-wrap: nowrap; overflow: auto">

  <% date = @trail.start_date %>
  <% until @trail.end_date + 1 == date %>
  <% array = @trail.activities.where(date: date) %>



  <div class ="m-5" style = "flex: 0 0 auto">
    <div class="card" style="width: 18rem; height: 300px; border-radius: 30px; border: 1px solid black; ">
      <div class="card-body d-flex flex-column text-center justify-content-between">
        <h5 class="card-title"><%= date.strftime('%d %b %Y') %></h5>
        <% if array.empty? %>
        <h2 class="card-text"> NO ACTIVITIES TODAY! </h2>
        <% else %>
        <% array.take(2).each do |activity| %>

        <div style= "border: 1px solid black">
        <p class="card-text"><%= activity.name %></p>
        <p class="card-text"><%= activity.start_time %></p>
        </div>
        <% end %>
        <%if array.length > 2 %>
        <h6>...</h6>
        <% end %>
        <% end %>
        <a href="#" class="btn btn-primary" style = "align-self: center">Go somewhere</a>
      </div>
    </div>
  </div>



  <% date += 1 %>
  <% end %>
</div>
