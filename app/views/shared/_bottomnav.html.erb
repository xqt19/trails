<nav class="navbar fixed-bottom navbar-light bg-dark animated slideInUp">
  <div id="navimap">
    <% if controller_name == 'activities' %>
      <%= link_to "", trail_path(trail), class: "fas fa-arrow-circle-left text-decoration-none" %>
    <% elsif controller_name == 'lists' %>
      <%= link_to "", trail_activities_path(list.trail), class: "fas fa-map-marked-alt text-decoration-none" %>
    <% elsif controller_name == 'pages' || controller_name == 'friendships' %>
      <%= link_to "", edit_user_path(current_user), class: "fas fa-user-edit text-decoration-none" %>
    <% else %>
      <%= link_to "", trail_activities_path(trail), class: "fas fa-map-marked-alt text-decoration-none" %>
    <% end %>
  </div>
  <div id="navifriends">
    <% if controller_name != 'friendships' %>
      <%= link_to "", user_friendships_path(current_user), class: "fas fa-users text-decoration-none" %>
    <% end %>
  </div>
</nav>

<div id="navihome" class="fixed-bottom d-flex justify-content-center align-items-center animated slideInUp">
  <% if controller_name == 'pages' %>
    <%= link_to "", root_path, class: "fas fa-home text-decoration-none" %>
  <% else %>
    <%= link_to "", index_path, class: "fas fa-home text-decoration-none" %>
  <% end %>
</div>
