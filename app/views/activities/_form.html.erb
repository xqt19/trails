<%= simple_form_for [trail, activity], html: {id:"activity-form"} , remote: true do |f| %>
  <%= f.input :name, label: 'Activity' %>
  <%= f.hidden_field :date, as: :string, value: date %>
  <% if activity.id %>
    <%= f.input :start_time, as: :string, input_html: {class: "timepicker"}, placeholder: "4.56 AM/PM"  %>
    <%= f.input :end_time, as: :string, input_html: {class: "timepicker"}, placeholder: "4.56 AM/PM" %>
    <%= f.input :location %>
    <%= f.input :description %>
  <% end %>
  <div class="d-flex justify-content-center py-3">
  <%= f.button :submit, "Update Activity", class: "submit-btn-form btn btn-outline-dark" %>
  </div>
<% end -%>
