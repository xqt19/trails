
<div class="container d-flex flex-column justify-content-center align-items-center text-center m-0 p-0  ">

  <div class="loca d-flex justify-content-center align-items-center animated fadeIn delay-1s">
    <h3>LOCATIONS <i class="fas fa-location-arrow"></i></h3>
  </div>
  <div class="card animated zoomInDown" id="map" style="width: 99%;  height: 695px;"  data-markers="<%= @markers.to_json %>"s data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</div>
<nav class="navbar fixed-bottom navbar-light bg-dark d-flex justify-content-between align-items-center animated bounceIn px-5 ">
    <div id="navimap">
        <%= link_to "", trail_path(params[:trail_id]), class: "fas fa-arrow-circle-left" %>
    </div>
    <div id="navifriends">
        <i class="fas fa-users"></i>
    </div>
</nav>

  <div id="navihome" class="card fixed-bottom d-flex justify-content-center align-items-center animated slideInUp delay-1s">
        <%= link_to "", root_path, class: "fas fa-home" %>
  </div>


<style>
  .card {
    width: 150px;
    height: 80px;
    border-radius: 5px 5px 0px 0px;
  }
  .navbar {
    height: 60px;
  }
  #navihome {
    margin: auto;
  }
  .fa-home {
    font-size: 30px;
    color: black;
  }
  .fa-arrow-circle-left {
    font-size: 25px;
    color: cyan;
  }
  .fa-users {
    font-size: 25px;
    color: cyan;
  }

</style>
